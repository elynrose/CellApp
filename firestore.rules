rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Prevent privilege escalation by blocking writes to sensitive fields from non-admins.
    function ownerIsNotChangingRestrictedUserFields() {
      // Fields that should only be set/changed by trusted server/admin logic.
      let restricted = [
        'role',
        'isAdmin',
        'adminGrantedAt',
        'subscription',
        'subscriptionStatus',
        'credits',
        'stripeCustomerId',
        'stripeSubscriptionId'
      ];
      // For creates, diff() isn't available because resource.data may not exist; callers should use this only on update.
      return !request.resource.data.diff(resource.data).changedKeys().hasAny(restricted);
    }
    
    // Users collection with nested projects, sheets, cells, and generations
    match /users/{userId} {
      // Users can only read their own user document; admins can read any.
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Owners may update *non-privileged* profile fields only. Admins may update anything.
      allow update: if isAdmin() || (isOwner(userId) && ownerIsNotChangingRestrictedUserFields());
      allow delete: if isAdmin() || isOwner(userId);

      // Projects subcollection
      match /projects/{projectId} {
        allow read, create, update, delete: if isOwner(userId) || isAdmin();
        
        // Sheets subcollection
        match /sheets/{sheetId} {
          allow read, create, update, delete: if isOwner(userId) || isAdmin();
          
          // Cells subcollection
          match /cells/{cellId} {
            allow read, create, update, delete: if isOwner(userId) || isAdmin();
            
            // Generations subcollection (nested under cells)
            match /generations/{generationId} {
              allow read, create, update, delete: if isOwner(userId) || isAdmin();
            }
          }
        }
      }
    }
    
    // Packages collection - only admins can write, all authenticated users can read
    match /packages/{packageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // Models collection
    match /models/{modelId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // Templates collection - all authenticated users can read and create, admins can update/delete
    match /templates/{templateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Admin configuration
    match /admin/{configKey} {
      allow read, write: if isAdmin();
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

